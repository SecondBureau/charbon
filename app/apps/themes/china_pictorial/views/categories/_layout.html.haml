.row.mt-3
  .col-lg-8.col-md-12
    .pl-1{class: template.eql?(:category) ? 'text-danger h1' : 'h2'}= title
    - unless posts.blank?
      = render partial: theme_view("categories/#{template}"), locals: {posts: posts}
    - else
      .row
        .col-12
          .alert.alert-warning= raw ct('no_contents_found', default: 'No contents found')
    .text-center
      = will_paginate posts, renderer: BootstrapPagination::Rails
  .col-lg-4.col-md-12
    = render partial: theme_view('categories/filters')