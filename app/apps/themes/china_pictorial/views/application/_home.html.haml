    %h1.mb-3.text-white Ad
    = image_tag current_theme.the_field('ad2-img'), class: 'img-fluid w-100'
    
.row.hidden-sm-up
  .col-12
    = render partial: theme_view('blocks/post'), collection: current_site.posts.published.where("(#{CamaleonCms::Post.table_name}.published_at is not null and #{CamaleonCms::Post.table_name}.published_at <= ?)", Time.now).where("visibility != 'private'").reorder(published_at: :desc).limit(20), as: :post

.row
  .col-12
    %a{name: 'magazine'}
    = render partial: theme_view('blocks/issues'), locals: {count: current_theme.get_option('issues_count')}