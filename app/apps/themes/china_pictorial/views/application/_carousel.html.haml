- carousel = CamaleonCms::NavMenu.find_by_slug('carousel_posts')
- unless carousel.nil?
  #carousel-home.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      - (0..carousel.children.count-1).each do |index|
        %li{"data-slide-to" => index.to_s, "data-target" => "#carousel-home", class: index.eql?(0) ? 'active' : ''}
    .carousel-inner{:role => "listbox"}
      - carousel.children.each_with_index do |slide, index|
        - post = CamaleonCms::Post.find(slide.url).decorate
        .carousel-item{class: index.eql?(0) ? 'active' : '', style: "background-image: url('#{post.the_thumb_url}'); background-size:cover"}
          .container.container-carousel
            .carousel-item-caption
              .h2.text-danger= post.categories.first.decorate.name
              .h4.text-white= post.the_title
      
    %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-home", :role => "button"}
      %span.icon-prev{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-home", :role => "button"}
      %span.icon-next{"aria-hidden" => "true"}
      %span.sr-only Next
