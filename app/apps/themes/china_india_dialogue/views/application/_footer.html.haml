.cid-footer.cid-footer1.hidden-print
  .container
    .row
      
      .col-md-2
        = raw draw_menu(menu_slug:'footer_1', container_class: 'nav d-block', item_class: 'nav-item h6 py-1')
      
      .col-md-2
        = raw draw_menu(menu_slug:'footer_2', container_class: 'nav d-block', item_class: 'nav-item h6 py-1')
      
      .col-md-5
        .footer-block
          = theme_image_tag 'decorations/footer.png', width: 72, height: 4, alt: "----"
          %p
            %b Contact form:
          
      .col-md-3
        .footer-block
          = theme_image_tag 'decorations/footer.png', width: 72, height: 4, alt: "----"
          = raw current_theme.the_field(:address)
  
  .cid-footer.cid-footer2
