- thumbcss = 'img-fluid' unless local_assigns.has_key?(:thumbcss)
- videocss = 'embed-responsive-4by3' unless local_assigns.has_key?(:videocss)
- nolink = false unless local_assigns.has_key?(:nolink)

- if post.get_meta('featured_video').blank?
  = link_to_unless nolink, post.decorate.the_thumb(class: thumbcss), post.decorate.the_path
- else
  .featured_video.embed-responsive{class: videocss}
    = video_tag post.get_meta('featured_video')