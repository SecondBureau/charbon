<!-- OneroadoneBelt & Environment Categories Template -->  
<div class="home-block {{category.class}} home-block-{{category.slug}}" ng-class="{'home-block-loading': !(posts.length > 0)}">
  <div class="row">
    <div class='col-md-3' ng-show="category.slug == 'environment'">
      <div class="home-block-contents" ng-repeat="post in posts" ng-if="$first">
        <img class="img-featured img-responsive" bh-holder="{{post.image_width}}x{{vm.post.image_height}}" bh-src="{{post.featured_image_url}}"/>
      </div>
    </div>
    <div ng-class="{'col-md-9': category.slug == 'environment', 'col-md-12': category.slug != 'environment'}" >
      <div class="home-block-header">
        <img cam-src='decorations/category.png' class="pull-right" alt="*" />
        <h2 class="category-color">{{category.label}}</h2>
      </div>
      <div class="home-block-contents" ng-repeat="post in posts" ng-if="$first">
        <bh-post id="post.id" template="'mini'" slug="post.slug"></bh-post>
      </div>
    </div>
  </div>
  <div class='col-md-12' ng-show="!(posts.length > 0)" us-spinner="{radius:10, width:3, length: 8}" style="position:relative;width:100%;margin:80px 0 20px 0"></div>
</div>