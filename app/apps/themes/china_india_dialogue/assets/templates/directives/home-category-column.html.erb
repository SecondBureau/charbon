<!-- Column Category Template -->    
  <div class="home-block {{category.class}} home-block-{{category.slug}}" ng-class="{'home-block-loading': !(posts.length > 0)}">
    <div class="home-block-header">
      <%= image_tag 'cid/category-decoration.png', class: "pull-right", alt: "*"  %>
      <h2 class="category-color">{{category.label}}</h2>
    </div>
    <div class="row">
      <div class='col-md-12' ng-show="!(posts.length > 0)" us-spinner="{radius:10, width:3, length: 8}" style="position:relative;width:100%;margin:80px 0 20px 0"></div>
      <div ng-repeat="post in posts track by $index">
        <div class='col-md-6'>
          <div class="home-block-contents" >
            <img ng-src="/assets/cid/columnist-1.png" class="pull-left">
            <ul class="home-post-group">
              <li class="home-post-item" >
                <h3 class="home-post-title"><a href="#/post/{{post.slug}}">{{post.title}}</a></h3>
                <p><span class="home-post-author">{{post.author}}</span></p>
                <p class="home-post-summary">{{post.summary}}</p>
              </li>
            </ul>
          </div>
        </div>
      <div class="clearfix" ng-if="$index == 1"></div>
    </div>
  </div>